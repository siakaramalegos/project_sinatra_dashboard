<h2 class="text-primary">Search Results</h2>

<table class="table table-striped table-hover">
  <thead>
    <tr>
      <th>Title</th>
      <th>Company</th>
      <th>Location</th>
      <th>Post Date</th>
    </tr>
  </thead>
  <tbody>
    <!-- Jobs loop -->
    <% jobs.each do |job| %>
      <tr>
        <td>
          <a href="<%= job.direct_link %>" target="_blank">
            <%= job.title %>
          </a>
        </td>
        <td><%= job.company %></td>
        <td><%= job.location %></td>
        <td><%= job.post_date %></td>
      </tr>
    <% end %>
  </tbody>
</table>